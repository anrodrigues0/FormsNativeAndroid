<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Forms.LinearLayoutContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingHorizontal" tools:ignore="NewApi">@dimen/mdSpacing</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Theme.Forms.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black_lighest</item>
        <item name="android:textSize">@dimen/lgText</item>
    </style>


    <style name="Theme.Forms.TextInputEditTex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme.Forms.AuthInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="android:layout_marginBottom">@dimen/mdSpacing</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <style name="Theme.Forms.Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/button</item>
        <item name="android:textSize">@dimen/mdText</item>
        <item name="android:padding">@dimen/mdSpacing</item>
    </style>

    <style name="Theme.Forms.OnBackButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/ic_arrow_left</item>
        <item name="android:layout_marginTop">@dimen/xxlgSpacing</item>
    </style>

    <style name="Theme.Forms.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>



</resources>